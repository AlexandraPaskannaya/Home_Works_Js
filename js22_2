function cleanRoom(dirtyLevel){
  let result = dirtyLevel<=10;
  return new Promise ((resolve, reject) => {
      setTimeout(()=> {
          resolve(dirtyLevel);
      },  dirtyLevel * 1000);
  });
}


function cleanRoom(dirtyLevel){
  return new Promise((resolve, reject) => {
          setTimeout(() => {
          if(dirtyLevel<=10) {
              resolve(dirtyLevel)
          } else {
              reject('Ошибка! Комната слишком грязная')
          }
      }, dirtyLevel * 1000)
  });
}

function cleanRooms(firstRoom, secondRoom, thirdRoom){
  return Promise.all([cleanRoom(firstRoom), cleanRoom(secondRoom), cleanRoom(thirdRoom)]) 
}

cleanRooms(5,2,1)
  .then(result => {
    console.log(`Уборка всех комнат проведена успешно.`)
  })
  .catch(err => console.log('Ошибка! Комната слишком грязная. Уборка прекращена'));
